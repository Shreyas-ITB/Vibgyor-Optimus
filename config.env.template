# ============================================================================
# OPTIMUS AI Assistant - Configuration Template
# ============================================================================
# Copy this file to .env and fill in your settings
# ============================================================================

# ─────────────────────────────────────────────
# SQL Server Configuration
# ─────────────────────────────────────────────

# SQL Server Instance (e.g., localhost\SQLEXPRESS, 192.168.1.100,1433)
SQL_SERVER=localhost\\SQLEXPRESS

# Default Database
SQL_DATABASE=BoltAtom

# Authentication Method
# Option 1: Windows Authentication (Trusted_Connection)
SQL_TRUSTED_CONNECTION=yes
# SQL_USERNAME=
# SQL_PASSWORD=

# Option 2: SQL Server Authentication (comment out Trusted_Connection above)
# SQL_TRUSTED_CONNECTION=no
# SQL_USERNAME=your_sql_username
# SQL_PASSWORD=your_sql_password

# Encryption Setting (optional, yes, no, strict)
SQL_ENCRYPT=optional

# Allowed Databases (comma-separated)
ALLOWED_DATABASES=BoltAtom,HRMS_Dev

# ─────────────────────────────────────────────
# MCP Server Configuration
# ─────────────────────────────────────────────

# MCP Server Port
MCP_PORT=8001

# MCP Server Host
MCP_HOST=0.0.0.0

# Log Level (DEBUG, INFO, WARNING, ERROR)
MCP_LOG_LEVEL=INFO

# ─────────────────────────────────────────────
# OPTIMUS API Configuration
# ─────────────────────────────────────────────

# API Port
API_PORT=8000

# API Host
API_HOST=0.0.0.0

# MCP Server URL (internal)
MCP_URL=http://localhost:8001

# Log Level
API_LOG_LEVEL=INFO

# ─────────────────────────────────────────────
# LLM Configuration
# ─────────────────────────────────────────────

# Default LLM Provider (ollama or openai)
LLM_PROVIDER=ollama

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434

# Default Ollama Model
DEFAULT_MODEL=ministral-3:8b

# OpenAI Configuration (if using OpenAI)
# OPENAI_API_KEY=sk-your-api-key-here
# OPENAI_MODEL=gpt-4o

# Temperature Setting (0.0 - 1.0)
DEFAULT_TEMPERATURE=0.7

# ─────────────────────────────────────────────
# OpenWebUI Configuration
# ─────────────────────────────────────────────

# OpenWebUI Port
OPENWEBUI_PORT=3000

# OpenWebUI Volume (for Docker)
OPENWEBUI_VOLUME=open-webui

# ─────────────────────────────────────────────
# Security Configuration
# ─────────────────────────────────────────────

# Enable API Key Authentication (true/false)
REQUIRE_API_KEY=false

# API Keys (comma-separated if multiple)
# API_KEYS=sk-key1,sk-key2

# CORS Origins (comma-separated or * for all)
CORS_ORIGINS=*

# ─────────────────────────────────────────────
# Advanced Configuration
# ─────────────────────────────────────────────

# Enable File Indexing
ENABLE_FILE_INDEXING=true

# SQL Scripts Directory (for file indexing)
SQL_SCRIPTS_DIR=./sql_scripts

# Max Query Results
MAX_QUERY_RESULTS=5000

# Query Timeout (seconds)
QUERY_TIMEOUT=30

# Enable Streaming
ENABLE_STREAMING=true

# Cache Tool Results (seconds, 0 to disable)
TOOL_CACHE_TTL=0
